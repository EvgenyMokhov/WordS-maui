<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WordS.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:WordS"
    Title="WordS">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:NewWordPage}"
        Route="NewWordPage" />
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:TestPage}"
        Route="TestPage" />
    <ShellContent
    Title="Home"
    ContentTemplate="{DataTemplate local:TestsPage}"
    Route="TestsPage" />
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Главная" Clicked="OnMainPageClicked"/>
        <ToolbarItem Text="Тесты" Clicked="OnTestsClicked"/>
        <ToolbarItem Text="Настройки" Clicked="OnSettingsClicked"/>
    </ContentPage.ToolbarItems>
</Shell>
